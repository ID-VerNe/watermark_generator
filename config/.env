# .env
# Logo 和字体文件路径 (相对于项目运行目录)
LOCATION_LOGO_PATH=config/location_logo.png
SIGNATURE_LOGO_PATH=config/signature_logo.png
FONT_PATH=config/misans.ttf

# 画布尺寸
CANVAS_WIDTH=3000
CANVAS_HEIGHT=764

# 边缘留白 (像素)
PADDING=20

# 默认字体大小 (像素) - 用户可在 GUI 输入
DEFAULT_FONT_SIZE=40

# 默认签名 Logo 宽度 (像素) - 用户可在 GUI 输入，或根据文字宽度确定 (待定)
DEFAULT_SIGNATURE_LOGO_WIDTH=600

# 地点 Logo 与文字的间距 (像素)
LOCATION_LOGO_TEXT_SPACING=20

# 文字颜色 (RGB 255,255,255 代表白色)
TEXT_COLOR_R=255
TEXT_COLOR_G=255
TEXT_COLOR_B=255
TEXT_COLOR_A=255

# 分隔符文本
LOCATION_SEPARATOR=' · '
INFO_SEPARATOR=' & '

# 右侧信息之间的分隔符 (例如：相机 & 镜头)
CAMERA_LENS_SEPARATOR=' & '

# 地点标记垂直偏移量 (像素) - 正值向上，负值向下
LOCATION_VERTICAL_OFFSET=10

# 地点文字水平偏移量 (像素) - 正值向右，负值向左
LOCATION_TEXT_HORIZONTAL_OFFSET=40

# 默认输入值
DEFAULT_CITY=GUANGZHOU
DEFAULT_LOCATION=HUANGPU
DEFAULT_CAMERA=LICE-7c
DEFAULT_LENS='SIGMA 24-70mm F2.8 DG DN II Art'
